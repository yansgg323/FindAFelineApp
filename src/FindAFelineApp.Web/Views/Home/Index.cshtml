@using FindAFelineApp.Services.DTOs
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Find A Feline!</h1>
    <p>Find the perfect cat for you and your home</p>
</div>

<div class="d-flex">
        @foreach (CatDTO item in ViewBag.Cats)
        {
            <div class="card">
                <p>
                    @Html.DisplayFor(modelItem => item.Name)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Breed)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Age)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Color)
                </p>
                <p>
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" height="150" width="150" />
                </p>
                <p>
                    <a asp-action="Details" asp-controller="Cats" asp-route-id="@item.Id">Details</a>
                <a asp-action="Adopt" asp-controller="Cats" asp-route-id="@item.Id">Adopt</a>
                </p>
                
            </div>
        }
</div>
