@model IEnumerable<FindAFelineApp.Services.DTOs.CatDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="d-flex flex-wrap justify-content-between">
@foreach (var item in Model) {
    <div class="card p-3 col-lg-3 col-md-5 col-sm-12 mx-lg-3 mb-3">
        <div class="card-thumbnail">
            <img class="img-thumbnail" src="@Html.DisplayNameFor(model => model.Name)" alt="@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Breed)" />
        </div>
        <h3 class="text-center mt-2">@Html.DisplayNameFor(model => model.Name) @Html.DisplayFor(modelItem => item.Breed)</h3>
        <h4 class="text-center mt-2">@Html.DisplayFor(modelItem => item.Age) years old</h4>
        <h4 class="text-center mt-2">@Html.DisplayFor(modelItem => item.Color)</h4>
        <h4 class="text-center mt-2">@Html.DisplayFor(modelItem => item.Personality)</h4>
            <div class="d-flex flex-wrap justify-content-between">
                <a class="btn btn-success mr-3" asp-action="Adopt" asp-route-id="@item.Id">Adopt</a>
            <a class="btn btn-warning mr-3" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-primary mr-3" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </div>
    </div>
}
</div>